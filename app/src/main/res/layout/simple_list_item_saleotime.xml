<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="6dp"
        android:gravity="center_vertical|left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_sale_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_saleCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Title"
            android:textColor="#999999"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/saleNum"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:text="0"
        android:layout_marginLeft="16dp"
        android:textColor="#f20813"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/actualSaleNum"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:text="0"
        android:layout_marginLeft="20dp"
        android:textColor="#f20813"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/saleLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical|right">
        <ImageView
            android:id="@+id/iv_saleImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/wrong1" />
    </LinearLayout>

</LinearLayout>